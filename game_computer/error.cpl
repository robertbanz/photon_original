
15000
FOR Y= 1 TO 3
BEEP
FOR X=1 TO 1000:NEXT X
NEXT Y

IF ERR=61 THEN MONO.REV$="  DRV B DISK FULL  ":GOSUB 7000:RESUME 3000
IF ERR=67 THEN MONO.REV$="  DRV B DIRECTORY FULL  ":GOSUB 7000:RESUME 3000
IF ERR=68 THEN MONO.REV$="  DRV B NOT PRESENT  ":GOSUB 7000:RESUME 3000
IF ERR=71 THEN MONO.REV$="  DRV B NOT READY  ":GOSUB 7000:RESUME 3000
IF ERR=72 THEN MONO.REV$="  DRV B DISK MEDIA ERROR  ":GOSUB 7000:RESUME 3000
IF ERR=70 THEN MONO.REV$="  DRV B WRITE PROTECTED  ":GOSUB 7000:RESUME 3000

	MONO.REV$ ="  SYSTEM ERROR "+STR$(ERR)+"  ": GOSUB 7000
	BEEP
