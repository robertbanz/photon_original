          NEXT X
     COLOR WHITE,BLACK,BLUE
     IF ALPHA.GREEN.TOTAL<=ALPHA.RED.TOTAL THEN 8330
     COLOR WHITE+BLINKING,BLACK,BLUE
8330
     LOCATE 23,34
     PRINT USING "######";ALPHA.GREEN.TOTAL


     RETURN



