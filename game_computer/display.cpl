	'---------------------------------------------------
	'   MODE 1 - ALPHA - TWO TEAMS OF UP TO 20 PLAYERS
	'---------------------------------------------------

	'	PRINT RED SCORES
	'	----------------

     COLOR RED,BLACK,BLUE
     IF SORTED.ALPHA.RED.SCORE(1)<=SORTED.ALPHA.GREEN.SCORE(1) THEN 8110
     COLOR RED+BLINKING,BLACK,BLUE
8110
     LOCATE 3,1
     TEMP=3
          FOR X=1 TO 20
               IF SORTED.ALPHA.RED.ID$(X)="          " THEN 8120
               LOCATE TEMP,2 : PRINT SORTED.ALPHA.RED.NAME$(X)
               LOCATE TEMP,13: PRINT USING "#####"; SORTED.ALPHA.RED.SCORE(X)
               TEMP=TEMP+1
8120
               COLOR RED,BLACK,BLUE
          NEXT X
     COLOR WHITE,BLACK,BLUE
     IF ALPHA.RED.TOTAL <= ALPHA.GREEN.TOTAL THEN 8130
     COLOR WHITE+BLINKING,BLACK,BLUE
8130
     LOCATE 23,12
     PRINT USING "######"; ALPHA.RED.TOTAL

8200
                            ' PRINT GREEN SCORES
